{
  "compilerOptions": {
    "sourceMap": true,
    "removeComments": true,

    "baseUrl": "./",
    "rootDir": "./",
    "outDir": "./dist",

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "alwaysStrict": true,

    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "emitDecoratorMetadata": true,

    "esModuleInterop": true,
    "experimentalDecorators": true,
    "declaration": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "paths": {
      "genql": ["./packages/controller/generated/graphql.ts"],
      "@utils/*": ["packages/common/tools/utilities/*"],
      "@comps/*": ["packages/common/tools/components/*"]
    }
  }
}
